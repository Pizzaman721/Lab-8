#Project Euler 
import math


def divisors(n):# creates a list of divisors, will later check if 500 divisos
    listofdivisors=[]
    for a in range(1,n):
        if n%a==0:#ensuring the 
            listofdivisors.append(a)
            if a!=n/a:#getting rid of doubles from squares
                listofdivisors.append(n/a)
    return (listofdivisors)

def checkTN(n): #checks if number is a triangle number
    m=int(math.sqrt(n*2))
    if m*(m+1)/2==n:
        return True
    else:
        return False

def HDTN(n):
    while n>=1:
        if checkTN(n) is True:
            if divisors(n)==500:
                return n
        else: 
            n+=1
            return HDTN(n)

n=1
print(HDTN(n))
